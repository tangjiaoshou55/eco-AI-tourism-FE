  border: 2px solid #86E2FF;
  margin-right: 10px; 
}
.userName
{
 font-family: Inter;
 font-size: 14px;
 font-weight: 400;
 line-height: 19.36px;
 text-align: left;
}

.bottomLine {
position: absolute;
width: 100%;
height: 0px;
top: 78px;
left: 0px;
border: 1px solid #86E2FF;
}

/* 标题 */
.cities
{
  width: 246.19px;
  height: 58.79px;
  top: 108px;
  left: 23px;
  position: absolute;
  display: flex;
  align-items: flex-end; 

}

.cityName
{
  font-family: Inter;
  font-size: 45.93px;
  font-weight: 400;
  line-height: 55.59px;
  text-align: left;
}
.tagName
{
  position: relative;
  font-family: Inter;
  font-size: 24px;
  font-weight: 400;
  text-align: left;
  color: #31CEFF;
}

.tourTitle
{
  position: absolute;
  width: 302px;
 height: 26px;
 top: 176px;
 left: 23px;
 font-family: Inter;
font-size: 22.97px;
font-weight: 400;
line-height: 27.79px;
text-align: left;
}

.container
{
  position: absolute;
  top: 250rpx;
  width: 100%;
  height: 75%;
}


.tourStyle {
  

  display: flex;
  /* 确保能换行 */
  flex-wrap: wrap;
  /* 均匀分布 */
  justify-content: space-between;
}

.selectedstyle {
   
  margin-bottom: 10px;
  padding: 10px;
  text-align: center; 
  border: 1px solid #86E2FF;
  color: #86E2FF;
  background: #FFFFFF;
}

.selectedstyle.active {
 background: #86E2FF;
  color: #ffffff;
}


.button-container
{
  position: absolute; 
  top: 610px;
  left: 332px;
}

.circle-button {
  width: 90rpx;
  height: 90rpx;
  background-color:#31CEFF;/* 圆形按钮的背景颜色 */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.arrow-icon-left {
  width: 40rpx; /* 根据需要调整箭头图标大小 */
