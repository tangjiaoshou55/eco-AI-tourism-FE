/* pages/makePlan/makePlan.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.userInfo
{
  position: absolute;
top: 24px;
left: 18px;
display: flex;
align-items: center; 


}
.userHead
{
  width: 41px;
