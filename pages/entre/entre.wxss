}
.info {
  width: 100%;
  height: 106rpx;
  padding-left: 20rpx;
  border-bottom: 2rpx solid #e0e0e0; /* 边框样式 */
  display: flex;
  align-items: flex-end; /* 文字靠底边 */
  line-height: 80rpx; /* 调整文字的垂直居中 */
}




/* 输入框 */
.input-element {
  width: calc(100% - 80rpx); /* 留出图标位置 */
  height: 100%;
  padding: 0 40rpx 0 10rpx;
  font-size: 30rpx; /* 调整字体大小 */
  box-sizing: border-box;
  text-align: center; /* 水平中对齐 */
}
