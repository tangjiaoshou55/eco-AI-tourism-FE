/* pages/calculator/calculator.wxss */

page {
  position: relative;
  width: 100%;
  height: 100vh;
  padding:20rpx;
  box-sizing: border-box;
}

/* 标题 */
.fixedInfo {
  position: sticky;
  top: 0;
  z-index: 1;
  padding-bottom: 20rpx;
}

.title {
  font-size: 60rpx;
}

.tripInfo {
  font-size: 40rpx;
}

/* 景区门票 */
.admissionFee {
  display:flex;
  flex-direction: row;
  border: 2px solid #9CE0FB;
  border-radius: 20rpx;
  padding: 20rpx;
  align-items: center;
  margin-bottom: 20rpx;
}

.sceneryImage {
  width: 50rpx;
  height: 50rpx;
  border-radius: 5rpx;
  margin-right: 10rpx;
  margin-right: 20rpx;
}

.sceneryTitle {
  display: flex;
  font-weight: bold;
  flex-grow: 1; /* 让标题占据剩余空间 */
  margin-right: 20rpx;
  font-size: 40rpx;
}

.sceneryFee {
  padding: 10rpx; /* 根据需要设置内边距 */
  width: 150rpx;
  background-color: #9CE0FB;
  border-radius: 20rpx; 
  font-size: 40rpx;
  text-align: center;
}





.section {
  margin-bottom: 20rpx;
  border: 2px solid #9CE0FB;
  border-radius:20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.toggle-button-up {
  width: 40rpx;
  height: 40rpx;
  cursor: pointer;
}

.toggle-button-down {
  width: 40rpx;
  height: 40rpx;
  transform: scaleY(-1);
  cursor: pointer;
}

.section-content {
  padding: 15rpx;
  background-color: #fff;
}

.columView {
  display:flex;
  flex-direction: column;
}

.rowInfo {
  display: flex;
  flex-direction: row;
}

.transportInfo {
  margin-top: 10rpx;
  font-size: 35rpx;
  margin-right: 9rpx;
}

.info-box {
  margin-top: 10rpx;
  width: 35%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: rgba(179, 229, 252, 0.4);
  text-align: center;
  border-radius: 5px;
  margin-left:10rpx;
}

.selector {
  position: fixed;
  z-index: 2;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.selector-content {
  width: 100%;
  height: 50%;
  background-color: #fff;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  padding: 20px;
}

.city-option, .transport-option, .city-transport-option {
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.trasMethod {
  margin-top: 10rpx;
  margin-left: 20rpx;
  height: 50rpx;
  width: 170rpx;
  rotate: left;
}

