}

.statement {
  text-align: left;
  font-size: 26rpx;
  color:rgba(0, 0, 0, 0.5);
  padding:10rpx;
}

.toast {
  position: fixed;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  padding: 30rpx 90rpx;
  border-radius: 10rpx;
  font-size: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  z-index: 1000;  /* 确保提示框在最上层 */
}