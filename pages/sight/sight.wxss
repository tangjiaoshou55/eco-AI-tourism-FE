/* pages/sight/sight.wxss */
page {
  height: 100vh;
  box-sizing: border-box;
}

.allPages {
  height: 100vh;
  display: flex;
}

.backgroundContainer {
  position: relative;
}

.backgroundPictures {
  width: 100%;
  height: 450rpx;
}

.backgroundPicture1 {
  background-color: gray;
  width: 100%;
}

.backgroundPicture2 {
  background-color: green;
  width: 100%;
}

.backgroundPicture3 {
  background-color: red;
  width: 100%;
}

.infoColumn {
  display: flex;  
  flex-direction: column;
  padding-top: 50rpx;
  padding-left: 30rpx;
  padding-bottom: 30rpx;
}

.sightTitle {
  font-size: 50rpx;
  font-weight: bolder;
  padding-bottom: 20rpx;
}

.sightAddr {
  font-size: 35rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
  opacity: 70%;
}

.sightDesc {
  font-size: 25rpx;
  width: 80%;
  padding-bottom: 20rpx;
  opacity: 70%;
}

.scoreRow {
  display: flex;  
  flex-direction: row;
}

/* 星星图片*/
.star {
  width: 30rpx;
  height: 30rpx;
  padding-right:2rpx;
  border-radius:4rpx;
}
/* 评分 */
.scoreText {
  margin-left: 10rpx;
  margin-top: 7rpx;
  font-family: Inter;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 19rpx;
  text-align: left;
  color: #FFBA08;
}

/* 推荐指数 */
.rateText {
  margin-left: 10rpx;
  margin-top: 7rpx;
  font-family: Inter;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 19rpx;
  text-align: left;
  color: #FFBA08;
  text-decoration: underline;
}

/* 景点门票部分 */
.sightPrice {
  width: 670rpx;
  height: 200rpx;
  margin-left: 30rpx;
 
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  border: 1rpx solid lightgray;
  box-shadow: 0px 4px 4px 0px #00000040;
  background-color: white;
  transition: all 0.1s;
}

.priceRow {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

/* 文字：门票价格 */
.priceTitle {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
}

/* 开放时间 */
.openTime {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: auto; /* 自动对齐到右侧 */
  margin-right: 20px; 
}

/* 文字：成人票/学生/儿童票 */
.FeeTitle {
  margin-left: 20rpx;
  font-size: 30rpx;
}

/* 票价 */
.Fee {
  font-size: 35rpx;
  margin-left: auto; /* 自动对齐到右侧 */
  margin-right: 20px; 
  color: #59A6DB;
  font-weight: bolder;
}

.tourInfo {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  margin-left: 35rpx;
}

.tourTitle {
  font-size: 33rpx;
  font-weight: bold;
}

.tourDesc {
  margin-top: 10rpx;
  font-size: 27rpx;
}