/* pages/loading/loading.wxss */

page {
  position: relative;
  width: 100%;
  height: 100vh;
  padding:20rpx;
  box-sizing: border-box;
}

.loadingImage {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
}

.loadingText {
  position: absolute;
  z-index: 2;
  color: white;
  bottom: 210rpx;
  right: 110rpx;
  background: rgba(0,0,0,0.2);
}

.waitText {
  font-size: 57rpx;
  font-weight: bolder;
  text-align: justify;
}

.waitVerse {
  font-size: 30rpx;
}